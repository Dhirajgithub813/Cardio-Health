# ============================================================
# Environment Configuration for CardioPredict Backend
# Copy this to .env and adjust values for your environment
# ============================================================

# ==================== APPLICATION ====================
# Environment: development, production, testing
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# ==================== SERVER ====================
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_THREADED=True

# ==================== LOGGING ====================
LOG_LEVEL=DEBUG
LOG_FILE=logs/cardio_app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=10

# ==================== DATABASE (Future Use) ====================
DATABASE_URL=sqlite:///cardio_predictions.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# ==================== API SETTINGS ====================
API_VERSION=2.0.0
MAX_CONTENT_LENGTH=16777216  # 16MB
API_TIMEOUT=30

# ==================== CORS ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000

# ==================== MODEL ====================
MODEL_FILE=cardio_model.pkl
SCALER_FILE=scaler.pkl
FEATURES_FILE=feature_names.pkl
PREDICTION_RETENTION_HOURS=24

# ==================== CACHING ====================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
REDIS_URL=redis://localhost:6379/0  # For Redis caching

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # Per hour

# ==================== MONITORING ====================
ENABLE_METRICS=True
ENABLE_HEALTH_CHECK=True

# ==================== SECURITY ====================
SESSION_COOKIE_SECURE=False  # True in production
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
